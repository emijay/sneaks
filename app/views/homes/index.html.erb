<section class="blog-section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-7 feature-article-col">
				<div class="feature-article-wrapper">

					<div class="feature-article-img">
						<img class="img-fluid" src= <%= @blogs[0].image_url %> alt="feature-top">
					</div close feature article img>

					<div class="feature-article-inner">
						<div class="feature_article_title">
              <h3><a href="lol.html" target="_self"><%= @blogs[0].title %></a></h3>
          	</div close feature article title>

          	<div class="feature_article_date">
              <p><a href="lol.html" target="_self"><%= @blogs[0].created_at.strftime("%B %e, %Y	") %></a></p>
          	</div close feature article date>
					</div close feature article inner>

				</div close feature article wrapper>
			</div close feature article col>
		</div close blog row>
	</div close blog container>
</section close blog section>
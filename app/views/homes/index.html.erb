<!-- upcoming sneaker releases -->
<div class="section-header">
	<h2>Sneak Peeks: Upcoming Drops</h2>
</div>

<div class="container-fluid releases">
	<div class="row">
		<div class="card-group">
			<div class="card border-light mx-2">
				<img class="card-img-top" src= "<%= @upcoming_shoes[0].image_url %>" alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title"><%= @upcoming_shoes[0].name %></h5>
				</div close card body>
				<div class="card-footer">
					<p><span class="bold">Drop Date:</span> <%= @upcoming_shoes[0].release_date %></p>
				</div close card footer>
			</div close card>

			<div class="card border-light">
				<img class="card-img-top" src="<%= @upcoming_shoes[1].image_url %>" alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title"><%= @upcoming_shoes[1].name %></h5>
				</div close card body>
				<div class="card-footer">
					<p><span class="bold">Drop Date:</span> <%= @upcoming_shoes[1].release_date %></p>
				</div close card footer>
			</div close card>

			<div class="card border-light mx-2">
				<img class="card-img-top" src="<%= @upcoming_shoes[2].image_url %>" alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title"><%= @upcoming_shoes[2].name %></h5>
				</div close card body>
				<div class="card-footer">
					<p><span class="bold">Drop Date:</span> <%= @upcoming_shoes[2].release_date %></p>
				</div close card footer>
			</div close card>
		</div close card group>
	</div close new releases row>
</div close release container>


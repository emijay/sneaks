<%= render "layouts/header" %>

<%= link_to 'Add new upcoming shoe', new_upcoming_shoe_path %><br>

<h2> Blogs </h2>
<% @blogs.each do |blog| %>
	<p> Image: <%=blog.image_url%></p>
	<p> Title: <%=blog.title%> </p>
	<p>	Content: <%=blog.content%></p>
<br>
<% end %>

<br>
<h2> Upcoming Releases </h2>
<% @upcoming_shoes.shuffle[0,3].each do |upcoming_shoe| %>

	<p> Shoe image url: <%= upcoming_shoe.image_url %></p>
	<p> Shoe name: <%= upcoming_shoe.name %> </p>
	<p> Shoe brand: <%= upcoming_shoe.brand.name %> </p>
	<p> Shoe release date: <%= upcoming_shoe.release_date %> </p>
	<p> Shoe retail price: <%= upcoming_shoe.retail_price %></p>
	<br>
<% end %>
<%= link_to 'View all upcoming releases', upcoming_shoes_path %>
<br>

<h2> Featured Owners collection </h2>
<% @shoes[0,3].each do |shoe| %>
	<p>Onwer picture: <%= shoe.user.image_url %> </p>
	<p>Owner: <%= link_to shoe.user.name, owner_path(shoe.user.id) %> </p>
	<% @shoes[0,3].each do |shoe| %>
		<p>Shoe image: <%= shoe.first_image_url %> </p>
		<p>Shoe name: <%= link_to shoe.name, shoe_path(shoe) %> </p>
	<% end %>
	<br>
<% end %>
<%= link_to 'View all collection', owners_path%>
<br>

<h2> Featured Sneakers </h2>

<% @shoes.shuffle[0,3].each do |shoe| %>
	<p>Shoe image: <%= shoe.first_image_url %> </p>
	<p>Shoe name: <%= shoe.name %> </p>
	<p>Shoe description: <%= shoe.description %> </p>
	<%= link_to 'Show this shoe', shoe_path(shoe) %>
	<br>
<% end %>